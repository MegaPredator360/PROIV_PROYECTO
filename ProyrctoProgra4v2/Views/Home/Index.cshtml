@{
    ViewData["Title"] = "Menú Principal";
    string username = User.Identity!.Name!;
}

<div class="container">
    <div class="home-container">
        @if (!string.IsNullOrEmpty(User.Identity!.Name))
        {
            <div class="center-text">
                <img src="~/images/logo.png" width="100" height="100">
                <h1>El Sindicato: Los Sintra Bajos</h1>
                <h2>¡Bienvenido @username!</h2>
            </div>
            @if (User.IsInRole("Administrador"))
            {
                <table class="table-home">
                    <tr>
                        <th></th>
                        <th class="th-home">
                            <a class="div-opciones" asp-controller="Usuario" asp-action="Index">
                                <h1 class="spacing-text">Usuario</h1>
                                <i class="bi bi-person size"></i>
                            </a>
                        </th>
                        <th></th>
                    </tr>
                    <tr>
                        <td class="td-home">
                            <a class="div-opciones" asp-controller="Tarea" asp-action="Index">
                                <h1 class="spacing-text">Tarea</h1>
                                <i class="bi bi-journal-code size"></i>
                            </a>
                        </td>
                        <td class="td-home">
                            <a class="div-opciones" asp-controller="Authentication" asp-action="Logout">
                                <h1 class="spacing-text">Cerrar Sesión</h1>
                                <i class="bi bi-door-open size"></i>
                            </a>
                        </td>
                        <td class="td-home">
                            <a class="div-opciones" asp-controller="Proyecto" asp-action="Index">
                                <h1 class="spacing-text">Proyecto</h1>
                                <i class="bi bi-terminal size"></i>
                            </a>
                        </td>
                    </tr>
                </table>
            }
            @if (User.IsInRole("Gestor"))
            {
                <table class="table-home">
                    <tr>
                        <th class="th-home">
                            <a class="div-opciones" asp-controller="Tarea" asp-action="Index">
                                <h1 class="spacing-text">Tarea</h1>
                                <i class="bi bi-journal-code size"></i>
                            </a>
                        </th>
                        <th class="th-home">
                            <a class="div-opciones" asp-controller="Authentication" asp-action="Logout">
                                <h1 class="spacing-text">Cerrar Sesión</h1>
                                <i class="bi bi-door-open size"></i>
                            </a>
                        </th>
                        <th class="th-home">
                            <a class="div-opciones" asp-controller="Proyecto" asp-action="Index">
                                <h1 class="spacing-text">Proyecto</h1>
                                <i class="bi bi-terminal size"></i>
                            </a>
                        </th>
                    </tr>
                </table>
            }
            @if (User.IsInRole("Usuario"))
            {
                <table class="table-home">
                    <tr>
                        <th class="th-home">
                            <a class="div-opciones" asp-controller="Tarea" asp-action="UsuarioIndex">
                                <h1 class="spacing-text">Tareas</h1>
                                <i class="bi bi-journal-code size"></i>
                            </a>
                        </th>
                        <th class="th-home">
                            <a class="div-opciones" asp-controller="Authentication" asp-action="Logout">
                                <h1 class="spacing-text">Cerrar Sesión</h1>
                                <i class="bi bi-door-open size"></i>
                            </a>
                        </th>
                    </tr>
                </table>
            }
        }
        else
        {
            <div class="center-text">
                <img src="~/images/logo.png" width="100" height="100">
                <h1>El Sindicato: Los Sintra Bajos</h1>
                <h2>¿Que deseas hacer?</h2>
            </div>
            <table class="table-home">
                <tr>
                    <th class="th-home">
                        <a class="div-opciones" asp-controller="Home" asp-action="Auditoria">
                            <h1 class="spacing-text">Auditoria</h1>
                            <i class="bi bi-easel2 size"></i>
                        </a>
                    </th>
                    <th class="th-home">
                        <a class="div-opciones" asp-controller="Authentication" asp-action="Login">
                            <h1 class="spacing-text">Iniciar Sesión</h1>
                            <i class="bi bi-door-open size"></i>
                        </a>
                    </th>
                </tr>
            </table>
        }
    </div>
</div>