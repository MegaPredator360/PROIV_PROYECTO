@model Tarea
@{
    ViewData["Title"] = "Detalles de Tarea";
}

<form asp-action="UsuarioDetails" method="post">
    <div class="container">
        <div class="contenido">
            <div class="title-index">
                <h1>
                    Detalles de Tarea: @Model.Nombre
                </h1>
            </div>
            <div class="form-registro">
                <div class="left-side">
                    <h3>Nombre de la tarea:</h3>
                    <div class="group-agregar">
                        <input type="text" class="input-text" asp-for="Nombre" readonly>
                        <span class="highlight"></span>
                        <span class="bar"></span>
                    </div>
                    <h3>Proyecto a asignar Tarea:</h3>
                    <div class="group-agregar">
                        <input type="text" class="input-text" asp-controller="Proyecto" asp-action="UsuarioDetails" asp-route-id="@Model.ProyectoId" value="@Model.Proyecto.Nombre" readonly>
                        <span class="highlight"></span>
                        <span class="bar"></span>
                    </div>
                    <h3>Estado:</h3>
                    <div class="select-estado">
                        <select asp-for="EstadoId" asp-items="ViewBag.Estados"></select>
                    </div>
                    <h3>Tarea asignada a los usuarios:</h3>
                    @foreach (var usuario in Model.TareasUsuarios)
                    {
                        <div class="group-agregar">
                            <input type="text" class="input-text" asp-controller="Usuario" asp-action="Details" asp-route-id="@usuario.UsuarioId" value="@usuario.Usuario.FullName" readonly>
                            <span class="highlight"></span>
                            <span class="bar"></span>
                        </div>
                    }
                </div>
                <div class="right-side">
                    <h3>Descripción de la tarea:</h3>
                    <textarea class="textarea-proy" asp-for="Descripcion" readonly></textarea>
                    <div class="separacion">
                        <button class="custom-btn btn-accept btn-margin1" type="submit">Actualizar Tarea</button>
                        <a class="custom-btn btn-info btn-margin1" type="submit" asp-action="UsuarioIndex">Volver a la lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>